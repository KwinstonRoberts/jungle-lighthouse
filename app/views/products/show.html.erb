<section class="products-show">

  <header class="page-header">
    <h1><%= link_to @product.category.name, @product.category %> &raquo; <%= @product.name %></h1>
  </header>

  <article class="product-detail">

    <div class="row">

      <div class="col-sm-4">
        <%= image_tag @product.image.url, class: 'main-img' %>
      </div>

      <div class="col-sm-8">
        <dl class="dl-horizontal">
          <dt>Name</dt>
          <dd><%= @product.name %></dd>
          <dt>Description</dt>
          <dd><%= @product.description %></dd>
          <dt>Quantity</dt>
          <dd><%= @product.quantity %></dd>
          <dt>Price</dt>
          <dd><%= @product.price %></dd>
        </dl>
      </div>
    </div>
  </article>
  <% if session[:user_id] %>
    <%= form_for @product, url: product_reviews_path(@product.id), method: :post do |form| %>
      <% if form.object.errors.any? %>
        <div class="alert alert-danger">
          <strong>The following errors prevented saving:</strong>
          <ul>
            <% form.object.errors.full_messages.each do |error| %>
              <li><%= error %></li>
            <% end %>
          </ul>
        </div>
        <%end%>
       <%= form.fields_for :reviews do |f| %>
          <form>
            <div class='form-group'>
              <%= f.label :description %>
              <%= f.text_area :description %>
            </div>
            <div class='form-group'>
              <%= f.label :rating%>
              <%= f.select :rating,options_for_select([['Select a rating'],1,2,3,4,5]), class: 'form-control'%>
            </div>
            <%= f.submit 'Submit', class: 'btn btn-primary' %>
          </form>
        <%end%>
      <%end%>
      <%end%>
    <article>
    <div class="row">
      <div class="col-sm-12">
        <h2> Reviews </h2>
        <dl class="dl-horizontal">
            <% @product.reviews.each do |review| %>
            <hr>
            <dt>Name</dt>
            <dd><b>
              <% if review.user %>
                <%= review.user.name %>
              <% else %>
                anonymous
              <% end %>
            </b></dd>
            <dd><%= review.description %></dd>
            <dt>Rating</dt>
            <dd><%= review.rating %>/5</dd>
            <%end%>
        </dl>
      </div>
    </div>
  </article>

</section>
